<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <OutputType>Library</OutputType>
    <AssemblyName>AndroidUI</AssemblyName>
    <RootNamespace>AndroidUI</RootNamespace>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <AnalysisLevel>latest-all</AnalysisLevel>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AndroidUI.Native.Nuget" Version="0.0.89" />
    <PackageReference Include="SkiaSharp" Version="2.88.0-preview.3040" />
    <PackageReference Include="SkiaSharp.HarfBuzz" Version="2.88.0-preview.254" />
    <PackageReference Include="SkiaSharp.Views" Version="2.88.0-preview.254" />
    <PackageReference Include="System.Security.Permissions" Version="6.0.0" />
    <PackageReference Include="Topten.RichTextKit" Version="0.4.151" />
  </ItemGroup>

</Project>
